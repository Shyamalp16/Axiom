{
  "name": "axiom-solana-bot",
  "version": "1.0.0",
  "description": "Disciplined Solana memecoin trading bot with hard-coded safety rules",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "bot": "tsx src/index.ts",
    "check": "tsx src/cli/check-token.ts",
    "status": "tsx src/cli/status.ts",
    "test:setup": "tsx src/cli/test-setup.ts",
    "paper": "cross-env PAPER_TRADE=true tsx src/cli/paper-trade.ts",
    "paper:check": "cross-env PAPER_TRADE=true tsx src/cli/paper-trade.ts check",
    "paper:stats": "cross-env PAPER_TRADE=true tsx src/cli/paper-trade.ts stats",
    "paper:reset": "cross-env PAPER_TRADE=true tsx src/cli/paper-trade.ts reset",
    "paper:export": "cross-env PAPER_TRADE=true tsx src/cli/paper-trade.ts export",
    "test:discovery": "tsx src/cli/test-discovery.ts"
  },
  "keywords": [
    "solana",
    "trading",
    "memecoin",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.95.0",
    "bs58": "^5.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.2.23",
    "lowdb": "^7.0.1",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.10",
    "cross-env": "^7.0.3",
    "tsx": "^4.15.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
